<!-- Features  -->
<section class="bg-white">
    <div class="container p-5 ml-10">
        <div class="mb-5">
        </div>
        <div class="col-12 feat-containa">
            <div class="blue-container">
                <div class=" col-12 feat-Jumbotron rounded box-shadow p-4">
                    <img src="/images/assets/man.png" alt="Alternate Text" />
                </div>
            </div>
            <div class="feature">
                <h2 style="margin-left: 3px;">Features</h2>
                <br />
                <ul class="fa-ul feaure-list">
                    <li><i class="fa-li fa fa-check-square"></i>Easily buy traceable and fit-for-slaughter livestock and livestock products.</li>
